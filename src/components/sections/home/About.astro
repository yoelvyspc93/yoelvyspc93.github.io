---
import { Image } from 'astro:assets'

type Props = {
	content: {
		title: string
		body: string[]
	}
}

const { content } = Astro.props
---

<section
	id="about"
	class="section-container px-4 py-10 sm:py-12 md:py-16"
	aria-labelledby="about-title"
>
	<div class="mx-auto max-w-7xl">
		<header class="lg:order-2">
			<h2 id="about-title" class="sr-only">{content.title}</h2>
		</header>
		<div
			class="grid grid-cols-1 items-center gap-8 md:gap-10 lg:gap-12 xl:grid-cols-2"
		>
			<figure
				class="mx-auto aspect-square w-full max-w-[clamp(240px,72vw,420px)] overflow-hidden rounded-[28%]"
			>
				<Image
					src="/images/about.webp"
					alt="Portrait of Yoelvys Perez Cabrera"
					loading="lazy"
					decoding="async"
					class="h-full w-full object-cover"
					width="560"
					height="560"
				/>
			</figure>
			<div class="mx-auto mt-2 max-w-[560px] space-y-5 md:mt-4 md:space-y-6">
				<article class="space-y-5">
					{content.body.map((paragraph) => <p>{paragraph}</p>)}
				</article>
			</div>
		</div>
	</div>
</section>
