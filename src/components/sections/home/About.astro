---
import { Image } from 'astro:assets'
import type { CollectionEntry } from 'astro:content'

type Props = {
	content: CollectionEntry<'site'>['data']['about']
}

const { content } = Astro.props
---

<section
	id="about"
	class="section-container px-4 py-10"
	aria-labelledby="about-title"
>
	<div class="mx-auto max-w-7xl">
		<header class="lg:order-2">
			<h2 id="about-title" class="sr-only">{content.title}</h2>
		</header>
		<div class="grid items-center gap-10 grid-cols-1 xl:grid-cols-2">
			<figure class="mx-auto size-[300px] md:size-[300px] xl:size-[500px]">
				<Image
					src={content.image.src}
					alt={content.image.alt}
					loading="lazy"
					decoding="async"
					class="h-full w-full object-cover"
					width="560"
					height="560"
				/>
			</figure>
			<div class="mt-6 space-y-6 max-w-[560px]">
				<article class="space-y-5">
					{content.body.map((paragraph) => (
						<p>{paragraph}</p>
					))}
				</article>
				<aside>
					<h3 class="text-base font-semibold uppercase tracking-[0.2em] text-black/70">
						{content.highlightsTitle}
					</h3>
					<ul class="mt-4 space-y-3 text-small text-pretty text-black/80">
						{content.highlights.map((highlight) => (
							<li>{highlight}</li>
						))}
					</ul>
				</aside>
			</div>
		</div>
	</div>
</section>
