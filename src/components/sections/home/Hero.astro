---
import DualOrbs from '@/shared/DualOrbs.astro'
import Button from '@/ui/Button.astro'

type HeaderCopy = {
	hello: string
	name: string
	role: string
	description: string
	download: string
	contact: string
}

const HEADER: HeaderCopy = {
	hello: 'Hi, I’m',
	name: 'Yoelvys',
	role: 'Senior Frontend Engineer',
	description:
		'I bridge the gap between design and engineering, building high-performance, scalable web applications with React, Next.js, and TypeScript. Focused on exceptional user experiences and technical excellence.',
	download: 'Download CV',
	contact: 'Let’s Talk',
}
---

<section
	id="hero"
	class="relative isolate grid min-h-screen place-items-center overflow-hidden px-4 py-24 sm:px-6"
	aria-labelledby="hero-title"
	aria-describedby="hero-desc"
>
	<!-- Base background -->
	<div aria-hidden="true" class="absolute inset-0 z-0 bg-white"></div>

	<!-- Orbs (decorative) -->
	<div aria-hidden="true" class="pointer-events-none absolute inset-0 z-10">
		<div class="absolute -top-24 -right-2 opacity-90">
			<DualOrbs variant="left" />
		</div>
		<div class="absolute -bottom-28 -left-1 opacity-80">
			<DualOrbs variant="right" />
		</div>
	</div>

	<!-- Overlay glass + blur -->
	<div
		aria-hidden="true"
		class="pointer-events-none absolute inset-0 z-20 bg-section"
	>
	</div>

	<!-- Texture on top -->
	<div
		aria-hidden="true"
		class="pointer-events-none absolute inset-0 z-30 bg-texture"
	>
	</div>

	<!-- Content -->
	<header
		class="relative z-40 w-full max-w-[664px] text-center flex flex-col items-center justify-center gap-8"
	>
		<h1 id="hero-title">{HEADER.hello} <span>{HEADER.name}</span></h1>
		<p id="hero-desc">{HEADER.description}</p>

		<div class="flex flex-wrap items-center justify-center gap-4">
			<Button
				variant="primary"
				size="large"
				href="/cv-yoelvys-perez-cabrera.pdf"
				external
				aria-label="Download my CV"
			>
				{HEADER.download}
			</Button>

			<Button
				href="#contact"
				variant="outlined"
				size="large"
				external={false}
				aria-label="Go to the contact section"
			>
				{HEADER.contact}
			</Button>
		</div>
	</header>
</section>
