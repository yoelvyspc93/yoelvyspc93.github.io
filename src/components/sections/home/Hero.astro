---
import DualOrbs from '@/shared/DualOrbs.astro'
import Button from '@/ui/Button.astro'
type Props = {
	content: {
		eyebrow: string
		name: string
		role: string
		description: string
		ctaPrimaryLabel: string
		ctaSecondaryLabel: string
	}
	ctas: {
		ctaPrimaryHref: string
		ctaPrimaryAriaLabel: string
		ctaSecondaryHref: string
		ctaSecondaryAriaLabel: string
	}
}

const { content, ctas } = Astro.props
const { eyebrow, name, role, description } = content
---

<section
	id="hero"
	class="section-container px-4 py-10"
	aria-labelledby="hero-title"
	aria-describedby="hero-desc"
>
	<!-- Base background -->
	<div aria-hidden="true" class="absolute inset-0 z-0 bg-white"></div>

	<!-- Orbs (decorative) -->
	<div aria-hidden="true" class="pointer-events-none absolute inset-0 z-10">
		<div class="absolute -top-24 -right-2 opacity-90">
			<DualOrbs variant="left" />
		</div>
		<div class="absolute -bottom-28 -left-1 opacity-80">
			<DualOrbs variant="right" />
		</div>
	</div>

	<!-- Overlay glass + blur -->
	<div
		aria-hidden="true"
		class="pointer-events-none absolute inset-0 z-20 bg-section"
	>
	</div>

	<!-- Texture on top -->
	<div
		aria-hidden="true"
		class="pointer-events-none absolute inset-0 z-30 bg-texture"
	>
	</div>

	<!-- Content -->
	<header
		class="relative z-40 w-full max-w-[664px] text-center flex flex-col items-center justify-center gap-8"
	>
		<h1 id="hero-title">
			{eyebrow} <span>{name}</span>
		</h1>
		<p class="text-large text-black/80">{role}</p>
		<p id="hero-desc">{description}</p>

		<div class="flex flex-wrap items-center justify-center gap-4">
			<Button
				variant="primary"
				size="large"
				href={ctas.ctaPrimaryHref}
				external
				aria-label={ctas.ctaPrimaryAriaLabel}
			>
				{content.ctaPrimaryLabel}
			</Button>

			<Button
				href={ctas.ctaSecondaryHref}
				variant="outlined"
				size="large"
				external={false}
				aria-label={ctas.ctaSecondaryAriaLabel}
			>
				{content.ctaSecondaryLabel}
			</Button>
		</div>
	</header>
</section>
