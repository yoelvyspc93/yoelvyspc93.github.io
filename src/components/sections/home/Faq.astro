---
type Props = {
	content: {
		title: string
		items: { question: string; answer: string }[]
	}
}

const { content } = Astro.props
const heading =
	content.title.trim().toLowerCase() === 'faq'
		? 'Frequently Asked Questions'
		: content.title
---

<section
	id="faq"
	class="section-container px-4 py-16 sm:py-20 md:py-24"
	aria-labelledby="faq-title"
>
	<div class="relative mx-auto w-full max-w-[560px] lg:max-w-7xl">
		<header class="text-center">
			<h2 id="faq-title">{heading}</h2>
		</header>

		<dl class="mt-10 columns-1 gap-5 text-left sm:columns-2 xl:columns-3">
			{
				content.items.map((item) => (
					<div class="mb-5 break-inside-avoid rounded-[22px] border border-primary/15 bg-white/85 p-6 shadow-[0_14px_30px_rgba(0,0,0,0.08)] backdrop-blur-sm transition-transform duration-300 hover:-translate-y-1 hover:shadow-[0_18px_38px_rgba(0,0,0,0.14)]">
						<dt class="text-large font-semibold leading-snug text-black">
							{item.question}
						</dt>
						<dd class="mt-3 text-medium leading-relaxed text-black/80">
							{item.answer}
						</dd>
					</div>
				))
			}
		</dl>
	</div>
</section>
