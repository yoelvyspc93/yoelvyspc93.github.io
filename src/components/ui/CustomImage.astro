---
interface Props {
	src: string
	alt: string
	fill?: boolean
	priority?: boolean
	width?: number
	height?: number
	className?: string
}

const {
	src,
	alt,
	fill = false,
	priority = false,
	width,
	height,
	className,
} = Astro.props

const baseClass = fill ? 'absolute inset-0 h-full w-full' : ''
const mergedClass = [baseClass, className].filter(Boolean).join(' ')
;<img
	src={src}
	alt={alt}
	class={mergedClass}
	loading={priority ? 'eager' : 'lazy'}
	width={fill ? undefined : width}
	height={fill ? undefined : height}
/>
---
