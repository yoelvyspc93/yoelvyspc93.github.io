---
import { ClientRouter } from 'astro:transitions'
import Navigator from '@/shared/Navigator.astro'
// import SlidingMenu from '@/shared/SlidingMenu.astro'

import '@/styles/global.css'
import Footer from '@/shared/Footer.astro'
import Seo from '@/shared/Seo.astro'
import home from '@/content/home.json'
import seo from '@/content/seo.json'
import person from '@/content/person.json'
import navigation from '@/content/navigation.json'
import footer from '@/content/footer.json'

type SeoOverrides = Partial<{
	title: string
	description: string
	canonicalPath: string
	ogImage: string
	locale: string
	type: string
	twitterCard: string
	language: string
}>

type Props = {
	seo?: SeoOverrides
}

const { seo: seoOverrides } = Astro.props

const { faq } = home
const seoData = { ...seo, ...seoOverrides }
---

<!doctype html>
<html lang={seoData.language}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			rel="stylesheet"
			href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800&display=swap"
		/>
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="theme-color" content="#ffffff" />
		<meta name="color-scheme" content="light" />
		<meta name="generator" content={Astro.generator} />
		<Seo seo={seoData} person={person} faq={faq} />
		<ClientRouter />
	</head>
	<body>
		<a href="#main-content" class="skip-link">Skip to main content</a>
		<Navigator navigation={navigation} />
		<!-- <SlidingMenu /> -->
		<slot />
		<Footer footer={footer} />
	</body>
</html>
