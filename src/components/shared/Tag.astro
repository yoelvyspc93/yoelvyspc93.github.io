---
import type { HTMLAttributes } from 'astro/types'

type Size = 'small' | 'large'

export interface Props extends HTMLAttributes<'span'> {
	size?: Size
	class?: string
}

const { size = 'small', class: className = '', ...props } = Astro.props

const base =
	'inline-flex items-center justify-center bg-white rounded-full text-black'

const sizes: Record<Size, string> = {
	small: 'px-4 py-2 text-sm',
	large:
		'px-4 py-2 text-medium shadow-small sm:px-6 sm:py-3 sm:text-large md:px-9 md:py-5',
}
---

<span class={`${base} ${sizes[size]} ${className}`} {...props}><slot /></span>
